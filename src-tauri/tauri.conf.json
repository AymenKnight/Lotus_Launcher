{
  "build": {
    "beforeBuildCommand": "set platform=tauri&& yarn productionWeb",
    "beforeDevCommand": "set platform=tauri&& yarn devServer",
    "devPath": "http://localhost:4999",
    "distDir": "../build/renderer/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Clinicord Server",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "title": "Clinicord Server",
      "menuOnLeftClick": true
    },
    "allowlist": {
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "start",
            "cmd": "Binaries/Win64/Lotus-Win64.exe",
            "args": [
              "-u",
              { "validator": "\\S+" },
              "-p",
              { "validator": "\\S+" },
              "-d",
              { "validator": "\\S+" }
            ]
          },
          {
            "name": "pg_isReady",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/pg_isready.exe"
          },
          {
            "name": "initdb",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/initdb.exe",
            "args": true
          },
          {
            "name": "pg_ctl:start",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/pg_ctl.exe",
            "args": [
              "-D",
              { "validator": "\\S+" },
              "-l",
              { "validator": "\\S+" },
              "start"
            ]
          },
          {
            "name": "pg_ctl:stop",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/pg_ctl.exe",
            "args": ["-D", { "validator": "\\S+" }, "stop"]
          },
          {
            "name": "createdb",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/createdb.exe",
            "args": true
          },
          {
            "name": "psql:db",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/psql.exe",
            "args": [
              "-U",
              { "validator": "\\S+" },
              "-c",
              {
                "validator": "^select 1 from pg_database where datname='+(\\S+)+'$"
              }
            ]
          },
          {
            "name": "psql:table",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/psql.exe",
            "args": [
              "-U",
              { "validator": "\\S+" },
              "-d",
              { "validator": "\\S+" },
              "-c",
              {
                "validator": "^select 1 from \"Member\"$"
              }
            ]
          },
          {
            "name": "psql:migrate",
            "cmd": "Binaries/ThirdParty/PostgreSQL/bin/psql.exe",
            "args": [
              "-U",
              { "validator": "\\S+" },
              "-d",
              { "validator": "\\S+" },
              "-f",
              { "validator": "\\S+" }
            ]
          }
        ]
      }
    },

    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "EULA",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["Binaries/*"],
      "identifier": "Clinicord Server",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },

      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": false,
        "title": "Launcher",
        "width": 400,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}
